@model WebApplicationPruebaDesarrolloCliente.Models.TipoCliente

@{
    ViewData["Title"] = "Crear";
}

<h1>Crear</h1>

<h4>TipoCliente</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CrearNuevo">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="IdTipoCliente" class="control-label"></label>
                <input asp-for="IdTipoCliente" class="form-control"  value="0" readonly/>
                <span asp-validation-for="IdTipoCliente" class="text-danger"></span>
                <label  class="card-body, text-primary" style="font-size: 12px;">El Identificador del Tipo de Cliente se creara Automaticamente.</label>
            </div>
            <div class="form-group">
                <label asp-for="CodigoTipoCliente" class="control-label"></label>
                <input asp-for="CodigoTipoCliente" class="form-control" />
                <span asp-validation-for="CodigoTipoCliente" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NombreTipoCliente" class="control-label"></label>
                <input asp-for="NombreTipoCliente" class="form-control" />
                <span asp-validation-for="NombreTipoCliente" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdUsuario" class="control-label"></label>
                <input asp-for="IdUsuario" class="form-control" />
                <span asp-validation-for="IdUsuario" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Crear" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

}
